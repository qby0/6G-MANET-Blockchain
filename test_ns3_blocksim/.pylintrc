[MASTER]
ignore=external
extension-pkg-whitelist=numpy

[MESSAGES CONTROL]
disable=C0111,R0903,C0103,R0902,R0913,R0914,C0301,W0212,C0330,C0326,W0511,R0801,R0201,R0901,C0413,E1101,E0611,R0915,W0613,E0001

[FORMAT]
max-line-length=100

[DESIGN]
max-args=10
max-attributes=15
max-locals=25
max-returns=10
max-branches=15
max-statements=60
max-parents=7
max-complexity=15

[SIMILARITIES]
min-similarity-lines=6
ignore-comments=yes
ignore-docstrings=yes
ignore-imports=yes
